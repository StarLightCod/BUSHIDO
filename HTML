    <button class="back-to-top" id="backToTop" aria-label="Наверх">
        <i class="fas fa-arrow-up"></i>
    </button>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const carousel = document.getElementById('carousel');
        const carouselItems = document.querySelectorAll('.trainer-card');
        let currentIndex = 0;
        
        function scrollCarousel(direction) {
            const itemWidth = carouselItems[0].offsetWidth + 24; // ширина карточки + gap
            currentIndex = Math.max(0, Math.min(currentIndex + direction, carouselItems.length - 1));
            carousel.scrollTo({
                left: currentIndex * itemWidth,
                behavior: 'smooth'
            });
        }
        
        window.scrollCarousel = scrollCarousel;
        
        const backToTopButton = document.getElementById('backToTop');
        
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                backToTopButton.classList.add('visible');
            } else {
                backToTopButton.classList.remove('visible');
            }
        });
        
        backToTopButton.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });
        
        const animateOnScroll = function() {
            const elements = document.querySelectorAll('.fade-in');
            
            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;
                
                if (elementPosition < screenPosition) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }
            });
        };
        
        if (!localStorage.getItem('demoWarningShown')) {
            alert("Это демонстрационный сайт. Он создан для показа возможностей разработчика и не является реальным коммерческим проектом.");
            
            localStorage.setItem('demoWarningShown', 'true');
        }
    });
</script>

    </script>
</body>
